{
    "name": "Sistema de Mentoria",
    "branding": {
      "mode": ["light", "dark"],
      "fonts": {
        "sans": "ui-sans-serif, system-ui, Segoe UI, Inter",
        "mono": "ui-monospace, SFMono-Regular",
        "serif": "ui-serif, Georgia"
      },
      "radius": {
        "sm": "calc(0.5rem - 4px)",
        "md": "calc(0.5rem - 2px)",
        "lg": "0.5rem",
        "xl": "calc(0.5rem + 4px)"
      }
    },
    "colors": {
      "base": {
        "background": "oklch(0.9818 0.0054 95.0986)",
        "foreground": "oklch(0.3438 0.0269 95.7226)",
        "border": "oklch(0.8847 0.0069 97.3627)",
        "card": "oklch(0.9818 0.0054 95.0986)"
      },
      "primary": {
        "color": "oklch(0.6171 0.1375 39.0427)",
        "foreground": "oklch(1.0000 0 0)"
      },
      "secondary": {
        "color": "oklch(0.9245 0.0138 92.9892)",
        "foreground": "oklch(0.4334 0.0177 98.6048)"
      },
      "accent": {
        "color": "oklch(0.9245 0.0138 92.9892)",
        "foreground": "oklch(0.2671 0.0196 98.9390)"
      },
      "chart": {
        "1": "oklch(0.5583 0.1276 42.9956)",
        "2": "oklch(0.6898 0.1581 290.4107)",
        "3": "oklch(0.8816 0.0276 93.1280)",
        "4": "oklch(0.8822 0.0403 298.1792)",
        "5": "oklch(0.5608 0.1348 42.0584)"
      }
    },
    "components": {
      "buttons": {
        "default": {
          "size": "md",
          "variant": "filled",
          "corners": "rounded-md"
        }
      },
      "cards": {
        "defaultPadding": "p-6",
        "shadow": "shadow-md",
        "radius": "rounded-lg"
      },
      "sidebar": {
        "background": "var(--sidebar)",
        "foreground": "var(--sidebar-foreground)",
        "accent": "var(--sidebar-accent)"
      }
    },
    "rules": {
      "responsive": true,
      "darkMode": true,
      "useTailwind": true,
      "avoid": ["inline styles", "custom CSS sem tokens"],
      "accessibility": {
        "requireAria": true,
        "contrastMinimum": "WCAG AA"
      }
    }
  }
  